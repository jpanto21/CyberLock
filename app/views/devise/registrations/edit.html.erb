<div class="container m-4 ">
  <h2 class="mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: "" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-5">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-info" role="alert">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-5">
      <%= f.input :username, required: true, autofocus: true, input_html: { class: 'form-control', autocomplete: 'username' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-5">
      <%= f.input :password, hint: "leave it blank if you don't want to change it", required: false, input_html: { class: 'form-control', autocomplete: 'new-password' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-5">
      <%= f.input :password_confirmation, required: false, input_html: { class: 'form-control', autocomplete: 'new-password' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-5">
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control', autocomplete: 'current-password' }, wrapper: false, label_html: { class: 'form-label' } %>
    </div>

    <div class="d-grid gap-2">
      <%= f.button :submit, "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
  <hr>


  <div class="card mb-5">
    <div class="card-body">
      <h3 class="card-title mt-4 mb-3">Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "btn btn-danger mb-4", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" } %>
    </div>
  </div>

<hr>
  <%= link_to "Back", :back, class: "btn btn-dark text-warning" %>
</div>
