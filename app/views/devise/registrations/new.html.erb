<div class="container mt-4">
  <h2 class="mb-4">Sign Up</h2>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: "" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-4">
      <%= f.input :email, 
                  required: true, 
                  autofocus: true, 
                  input_html: { class: 'form-control', autocomplete: "email" }, 
                  wrapper: false, 
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-4">
      <%= f.input :username, 
                  required: true, 
                  input_html: { class: 'form-control' }, 
                  wrapper: false, 
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-4">
      <%= f.input :name, 
                  required: true, 
                  input_html: { class: 'form-control' }, 
                  wrapper: false, 
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-4">
      <%= f.input :password, 
                  required: true, 
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), 
                  input_html: { class: 'form-control', autocomplete: "new-password" }, 
                  wrapper: false, 
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-4">
      <%= f.input :password_confirmation, 
                  required: true, 
                  input_html: { class: 'form-control', autocomplete: "new-password" }, 
                  wrapper: false, 
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="d-grid gap-2 mb-4">
      <%= f.button :submit, "Sign up", class: "btn btn-dark text-warning" %>
    </div>
  <% end %>

  <hr>
  <h3 class="mb-3">Already have an account?<h3>
  <div class= "btn btn-warning " >
  <%= render "devise/shared/links" %>
  </div>
</div>
