<div class="container mt-5">
  <h2 class="mb-4">Log in</h2>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: "" }) do |f| %>
    <div class="mb-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'form-control', autocomplete: "email" },
                  wrapper: false,
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="mb-4">
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'form-control', autocomplete: "current-password" },
                  wrapper: false,
                  label_html: { class: 'form-label' } %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-4">
        <%= f.input :remember_me, as: :boolean,
                    wrapper: false,
                    input_html: { class: 'form-check-input' },
                    label_html: { class: 'form-check-label' } %>
      </div>
    <% end %>

    <div class="d-grid gap-2 mb-4">
      <%= f.button :submit, "Log in", class: "btn btn-dark text-warning" %>
    </div>
  <% end %>
  <hr>
  <%= render "devise/shared/links" %>
</div>
