<!-- app/views/interactions/show.html.erb -->
<div class="container mt-4">
  <div class="card border-dark mb-4" style="border-radius: 1.5rem; margin: 0 auto; max-width: 60vw;">
    <div class="card-header bg-dark text-light" style="padding: 1rem; border-top-left-radius: 1.5rem; border-top-right-radius: 1.5rem;">
      <h3 class="card-title text-center " style="margin-bottom: 0; font-size: 2rem;">Question Asked on <%= @interaction.created_at.strftime("%b %d, %Y") %></h3>
    </div>
    <div class="card-body" style="background-color: white; padding-top: 0; border-bottom-left-radius: 1.5rem; border-bottom-right-radius: 1.5rem;">
      <div class="mb-4">
        <h4 class="card-title" style="margin-top: 1rem;">Question:</h4>
        <p class="card-text" style="font-size: 1.4rem; line-height: 1.6;"><%= @interaction.question %></p>
        <hr>
        <h4 class="card-title">Answer:</h4>
        <p class="card-text" style="font-size: 1.4rem; line-height: 1.6; white-space: pre-wrap;"><%= @interaction.answer %></p>
      </div>
    </div>
  </div>
</div>
