<nav class="navbar navbar-dark bg-dark fixed-top>
  <div class="container-fluid">
    <!-- Logo and Brand Name -->
    <%= link_to(root_path, class: "navbar-brand") do %>
      <%= image_tag("navlock.png", alt: "Logo", width: "40", height: "40") %>     
      <p style="display: inline-block; vertical-align: middle; margin-bottom: 0; margin-left: .5em; font-size: 1.5em;">CyberLock</p>
    <% end %>
    <!-- Toggler Button for Offcanvas Navbar -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Offcanvas Navbar -->
    <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
      <div class="offcanvas-header">
        <!-- Logo and Brand Name in Offcanvas -->
        <%= link_to(root_path, class: "navbar-brand") do %>
          <%= image_tag("navlock.png", alt: "Logo", width: "40", height: "40") %>
          <p style="display: inline-block; vertical-align: middle; margin-bottom: 0; margin-left: .5em; font-size: 1.5em;">CyberLock</p>
        <% end %>
        <!-- Close Button for Offcanvas -->
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <!-- Offcanvas Body -->
      <div class="offcanvas-body">
        <!-- Navbar Items -->
        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <!-- Organizations Navbar Item -->
          <li class="nav-item">
            <%= link_to "Organizations", organizations_path, class: "nav-link" %>
          </li>
          <!-- My Emails Navbar Item (Conditional) -->
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Emails", user_path(current_user.username), class: "nav-link" %>
            </li>
          <% end %>
          <!-- Dropdown Menu -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              User Actions
            </a>
            <!-- Dropdown Menu -->
            <ul class="dropdown-menu dropdown-menu-dark">
              <!-- Edit Profile Dropdown Item (Conditional) -->
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
                </li>
                <!-- Dropdown Divider -->
                <hr class="dropdown-divider">
                <!-- Sign Out Dropdown Item -->
                <li class="nav-item">
                  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
                </li>
              <% else %>
                <!-- Sign in Dropdown Item -->
                <li class="nav-item">
                  <%= link_to "Sign in", new_user_session_path, class: "dropdown-item" %>
                </li>
                <!-- Sign up Dropdown Item -->
                <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
