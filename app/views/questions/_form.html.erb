<!-- app/views/questions/_form.html.erb -->
<%= form_with url: ask_question_path, local: true, class: "d-flex flex-column align-items-start" do |form| %>
  <div class="mb-3 w-100">
    <%= form.label :question, "Ask Custos a Question:", class: "form-label text-dark" %>
    <%= form.text_area :question, rows: 3, class: "form-control", placeholder: "Type your question here...", required: true %>
  </div>
  <%= form.submit "Submit", class: "btn text-info btn-dark" %>
<% end %>
