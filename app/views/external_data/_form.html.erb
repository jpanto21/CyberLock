<%= form_with(model: external_datum, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
  <% if external_datum.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(external_datum.errors.count, "error") %> prohibited this external_datum from being saved:</h2>
      <ul>
        <% external_datum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :ext_username %>
    <%= form.text_field :ext_username, class: 'form-control', required: true, autocomplete: 'username' %>
  </div>

  <div class="form-group">
    <%= form.label :ext_email %>
    <%= form.text_field :ext_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :organization_id %>
    <%= form.collection_select :organization_id, Organization.all, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <!-- Hidden fields don't need styling, but ensure they're logically grouped if needed -->
  <%= form.hidden_field :main_email, value: false %>
  <%= form.hidden_field :alerts_count, value: 0 %>

  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-dark text-warning' %>
  </div>
<% end %>
