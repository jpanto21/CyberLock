<%= form_with(model: external_datum) do |form| %>
  <% if external_datum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(external_datum.errors.count, "error") %> prohibited this external_datum from being saved:</h2>

      <ul>
        <% external_datum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :ext_username, style: "display: block" %>
    <%= form.text_field :ext_username, required: true, input_html: { autocomplete: "username" } %>
  </div>

  <div>
    <%= form.label :ext_email, style: "display: block" %>
    <%= form.text_field :ext_email %>
  </div>

  <div>
    <%= form.label :organization_id, style: "display: block" %>
    <%= form.collection_select :organization_id, Organization.all, :id, :name %>
  </div>

  <div style="display: none;">
    <%= form.label :main_email, style: "display: block" %>
    <%= form.check_box :main_email %>
  </div>

<%= form.hidden_field :main_email, value: false %>
  <%= form.hidden_field :alerts_count, value: 0 %>

  <div class = mt-3>
    <%= form.submit %>
  </div>
<% end %>
