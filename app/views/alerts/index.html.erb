<div>
  <div>
    <h1>
      List of all alerts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new alert
    </h2>

    <form action="/insert_alert" method="post">
      <div>
        <label for="external_data_id_box">
          External data
        </label>

        <input type="text" id="external_data_id_box" name="query_external_data_id">
      </div>

      <button>
        Create alert
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          External data
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_alerts.each do |an_alert| %>
      <tr>
        <td>
          <%= an_alert.id %>
        </td>

        <td>
          <%= an_alert.external_data_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_alert.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_alert.updated_at) %> ago
        </td>

        <td>
          <a href="/alerts/<%= an_alert.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
