<body class="landing-page">
  <!-- Background Image -->
  <div class="position-relative">
    <%= image_tag("homelock.jpg", class: "img-fluid", alt: "Background Image") %>
    <!-- Overlay with Text and Buttons -->
    <div class="overlay position-absolute bottom-0 start-0 p-4">
      <!-- Heading -->
      <h1 class="heading text-warning mb-3">CyberLock</h1>
      <!-- Description -->
      <h3 class="text-white mb-4">A secure place to store <br> your usernames and emails.</h3>
      <!-- Conditional Buttons -->
      <% if user_signed_in? %> <!-- Check if user is signed in -->
        <!-- Edit Profile Button -->
        <div class="d-flex">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-secondary text-warning me-2" %>
          <!-- My Emails Button -->
          <%= link_to "My Emails", user_path(current_user.username), class: "btn btn-warning text-dark" %>
        </div>
      <% else %>
        <!-- Sign Up Button -->
        <div class="d-flex">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-dark me-2 " %>
          <!-- Login Button -->
          <%= link_to "Login", new_user_session_path, class: "btn btn-secondary text-warning" %>
        </div>
      <% end %>
    </div>
 
  </div>
  <!-- second image -->
    <div class="position-relative">
    <div class="container-fluid p-0">
    <%= image_tag("seclog.jpg", class: "img-fluid", alt: "Logo") %>
  </div>
  </div>
</body>
